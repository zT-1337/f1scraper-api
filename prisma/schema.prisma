// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model News {
  id Int @id @default(autoincrement())

  title String
  author String
  body String
  publishedAt DateTime
  sourceUrl String

  medias Media[]
}

model Media {
  id Int @id @default(autoincrement())

  url String
  mediaType MediaType

  news News @relation(fields: [newsId], references: [id])
  newsId Int
}

model ScraperLookup {
  source ScraperSource @id
  lastLookup DateTime
}

enum ScraperSource {
  TWITTER
}

enum MediaType {
  IMAGE
  VIDEO
  OTHER
}
